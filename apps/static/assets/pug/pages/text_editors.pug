extends ../layout.pug

block variables
  - var pageTitle = 'Text Editors'
  - var pageUrl = 'text_editors.html'
  - var page_heading = 'Text Editors'
  - var path = ['Text Editors']

block plugins-styles
  +link('summernote/dist/summernote.css','plugin')
  +link('bootstrap-markdown/css/bootstrap-markdown.min.css','plugin')

block plugins
  +script('summernote/dist/summernote.min.js', 'plugin')
  +script('bootstrap-markdown/js/bootstrap-markdown.js', 'plugin')

block content
