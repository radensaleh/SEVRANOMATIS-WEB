                input.form-control(type='text', value='07/11/2017')
        #date_3.form-group
            label.font-normal Decade view
            .input-group.date
                span.input-group-addon
                    i.fa.fa-calendar
                input.form-control(type='text', value='08/12/2017')
        #date_4.form-group
            label.font-normal Month select
            .input-group.date
                span.input-group-addon
                    i.fa.fa-calendar
                input.form-control(type='text', value='06/12/2017')
        #date_5.form-group
            label.font-normal Range select
            #datepicker.input-daterange.input-group
