extends ../layout.pug

block variables
  - var pageTitle = 'Form Advanced Plugins'
  - var pageUrl = 'form_advanced.html'
  - var page_heading = 'Advanced Plugins'
  - var path = ['Advanced Plugins']

block plugins-styles
  +link('select2/dist/css/select2.min.css','plugin')
  +link('bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css','plugin')
  +link('bootstrap-timepicker/css/bootstrap-timepicker.min.css','plugin')
  +link('jquery-minicolors/jquery.minicolors.css','plugin')

block plugins
  +script('select2/dist/js/select2.full.min.js', 'plugin')
  +script('jquery-knob/dist/jquery.knob.min.js', 'plugin')
  +script('moment/min/moment.min.js', 'plugin')
  +script('bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js', 'plugin')
  +script('bootstrap-timepicker/js/bootstrap-timepicker.min.js', 'plugin')
  +script('jquery-minicolors/jquery.minicolors.min.js', 'plugin')

block scripts
  +script('form-plugins.js', 'page')

