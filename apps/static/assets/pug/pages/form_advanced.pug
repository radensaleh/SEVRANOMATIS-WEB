            input.form-control.minicolors(type='text', data-control='hue', value='#F75A5F')
        .form-group
            label Saturation
            input.form-control.minicolors(type='text', data-control='saturation', value='#18C5A9')
        .form-group
            label Brightness
            input.form-control.minicolors(type='text', data-control='brightness', value='#F39C12')
        .form-group
            label Wheel
            input.form-control.minicolors(type='text', data-control='wheel', value='#23B7E5')
        .form-group
            label Hidden input
            input.form-control.minicolors(type='hidden', value='#3498DB')
        .form-group
            label RGB
            input.form-control.minicolors(type='text', data-format='rgb', value='rgb(33, 147, 58)')
        .form-group
            label RGBA
            input.form-control.minicolors(type='text', data-format='rgb', data-opacity='0.50', value='rgba(52, 64, 158, 0.5)')
        .form-group
