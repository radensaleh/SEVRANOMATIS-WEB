      +panel('Data picker <a class="btn btn-default btn-xs" href="https://github.com/uxsolutions/bootstrap-datepicker" target="_blank">Official site</a>')
        #date_1.form-group
            label.font-normal
            .input-group.date
                span.input-group-addon.bg-white
                    i.fa.fa-calendar
                input.form-control(type='text', value='04/12/2017')
        #date_2.form-group
