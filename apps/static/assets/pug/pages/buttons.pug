        .btn-toolbar.m-b-10
            .btn-group
                button.btn.btn-default
                    i.fa.fa-align-left
                button.btn.btn-default
                    i.fa.fa-align-center
                button.btn.btn-default
                    i.fa.fa-align-right
            .btn-group
                button.btn.btn-default
                    i.fa.fa-bold
                button.btn.btn-default
                    i.fa.fa-italic
                button.btn.btn-default
                    i.fa.fa-text-width
                .btn-group.dropdown
                    button.btn.btn-default.dropdown-toggle(data-toggle='dropdown')
                        | Fonts 
                        i.fa.fa-angle-down
                    ul.dropdown-menu
                        li
                            a(href='javascript:;') Arial
                        li
                            a(href='javascript:;') Roboto
        h6.m-t-10.m-b-10 Vertical variants
        .btn-group-vertical.m-r-10
            button.btn.btn-primary Button
            .btn-group.dropdown
                button.btn.btn-success.dropdown-toggle(data-toggle='dropdown')
                    | Fonts 
                    i.fa.fa-angle-down
                ul.dropdown-menu
                    li
                        a(href='javascript:;') Arial
                    li
                        a(href='javascript:;') Roboto
            button.btn.btn-warning Button
        br
        br
        .btn-group-vertical.m-r-10
            button.btn.btn-info
                i.fa.fa-star
            button.btn.btn-info
                i.fa.fa-line-chart
            button.btn.btn-info
                i.fa.fa-bell
        .btn-group-vertical.btn-rounded
            button.btn.btn-info
                i.fa.fa-plane
            button.btn.btn-info
                i.fa.fa-bus
            button.btn.btn-info
                i.fa.fa-taxi
        h6.m-t-10.m-b-10 Button group sizing
        .btn-toolbar.m-b-10
            .btn-group.btn-group-lg
                button.btn.btn-default Left
                button.btn.btn-default Middle
                button.btn.btn-default Right
        .btn-toolbar.m-b-10
            .btn-group
                button.btn.btn-default Left
