extends ../layout.pug

block variables
  - var pageTitle = 'Buttons'
  - var pageUrl = 'buttons.html'
  - var page_heading = 'Buttons'
  - var path = ['Buttons']

block content
  .row.btn-list-mrg-5
    .col-md-6
      +panel(title='Basic Buttons', tools={'collapse':1})
        p The most basic buttons without any icons or properties
        button.btn.btn-default Default
        button.btn.btn-primary Primary
        button.btn.btn-success Success
        button.btn.btn-info Info
        button.btn.btn-warning Warning
        button.btn.btn-danger Danger
        button.btn.btn-link Link
        h6.m-t-10.m-b-10 Outline buttons
        button.btn.btn-outline-default Default
        button.btn.btn-outline-primary Primary
        button.btn.btn-outline-success Success
        button.btn.btn-outline-info Info
        button.btn.btn-outline-warning Warning
        button.btn.btn-outline-danger Danger
        h6.m-t-10 Fixed width
        p Add class <code>.btn-fix</code> for the minimum fixed width
        button.btn.btn-default.btn-fix Default
        button.btn.btn-primary.btn-fix Primary
        button.btn.btn-success.btn-fix Success
        button.btn.btn-info.btn-fix Info
      +panel(title='Size Options')
        p Add <code>.btn-lg</code>, <code>.btn-sm</code>, or <code>.btn-xs</code> for additional sizes.
        button.btn.btn-primary.btn-lg Large button
        button.btn.btn-primary Default button
        button.btn.btn-primary.btn-sm Small button
        button.btn.btn-primary.btn-xs Mini button
        p Create block level buttons—those that span the full width of a parent—by adding <code>.btn-block</code> .
        button.btn.btn-success.btn-block Block button
        button.btn.btn-outline-info.btn-block Block button
      +panel(title='Rounded, Circle Buttons')
        p add <code>.btn-rounded</code> for the rounded buttons
        button.btn.btn-default.btn-rounded Rounded
        button.btn.btn-primary.btn-rounded Rounded
        button.btn.btn-success.btn-rounded Rounded
        button.btn.btn-info.btn-rounded Rounded
        p add <code>.btn-circle</code> for the circle buttons
        button.btn.btn-default.btn-circle.btn-lg: i.fa.fa-link
        button.btn.btn-primary.btn-circle.btn-lg: i.fa.fa-star
        button.btn.btn-danger.btn-circle.btn-lg: i.fa.fa-bell
        button.btn.btn-info.btn-circle.btn-lg: i.fa.fa-heartbeat
        br
        button.btn.btn-default.btn-circle: i.fa.fa-history
        button.btn.btn-warning.btn-circle: i.fa.fa-bullhorn
        button.btn.btn-success.btn-circle: i.fa.fa-life-ring
        button.btn.btn-info.btn-circle: i.fa.fa-upload
        button.btn.btn-primary.btn-circle: i.fa.fa-thumbs-up
        button.btn.btn-warning.btn-circle: i.fa.fa-eye
        button.btn.btn-danger.btn-circle: i.fa.fa-times
        button.btn.btn-success.btn-circle: i.fa.fa-check
    .col-md-6
      +panel(title='Button states', tools={'collapse':1})
        h6.m-b-10 Disabled and Active states
        button.btn.btn-info.disabled Disabled
        button.btn.btn-danger(disabled='') Disabled
        button.btn.btn-default(disabled='') Disabled
        button.btn.btn-success.active(aria-pressed='true') Active
        button.btn.btn-default.active(aria-pressed='true') Active
        h6.m-t-10.m-b-10 Toggle states
        button.btn.btn-info.m-r-5(data-toggle='button', aria-pressed='false')
            span.active-hidden
                i.fa.fa-cloud-upload
                |  Upload
            span.active-visible
                i.fa.fa-check
                |  Uploaded
        button.btn.btn-default.btn-circle.m-r-5(data-toggle='button', aria-pressed='false')
            span.active-hidden
                i.fa.fa-play
            span.active-visible
                i.fa.fa-pause.text-primary
        button.btn.btn-outline-default.m-r-5(data-toggle='button', aria-pressed='false')
            span.active-hidden
                i.fa.fa-thumbs-up
            span.active-visible
                i.fa.fa-thumbs-up.text-primary
        button.btn.btn-outline-success(data-toggle='button', aria-pressed='false') Single toggle
        h6.m-t-10.m-b-10 Checkbox
        .btn-group(data-toggle='buttons')
            label.btn.btn-default
                | Option 1
                input(type='checkbox')
            label.btn.btn-default.active
                | Option 2
                input(type='checkbox', checked='')
            label.btn.btn-default
                | Option 3
                input(type='checkbox')
        br
        br
        .btn-group(data-toggle='buttons')
            label.btn.btn-info
                | Option 1
                input(type='checkbox')
            label.btn.btn-info
                | Option 2
                input(type='checkbox')
            label.btn.btn-info
                | Option 3
                input(type='checkbox')
        h6.m-t-10.m-b-10 Radio
        .btn-group(data-toggle='buttons')
            label.btn.btn-success
                | Option 1
                input(type='radio')
            label.btn.btn-success.active
                | Option 2
                input(type='radio', checked='')
            label.btn.btn-success
                | Option 3
                input(type='radio')
        br
        br
        .btn-group(data-toggle='buttons')
            label.btn.btn-outline-info
                i.fa.fa-check.active-visible
                |  Male
                input(type='radio')
            label.btn.btn-outline-info
                i.fa.fa-check.active-visible
                |  Female
                input(type='radio')
            label.btn.btn-outline-info
                i.fa.fa-check.active-visible
                |  N/A
                input(type='radio')
      +panel(title='Grouped Buttons', tools={'collapse':1})
        .btn-group.m-b-10
            button.btn.btn-default Left
            button.btn.btn-default Middle
