                |  Users
            button.btn.btn-info
                i.fa.fa-cloud-upload
                |  Upload
            .btn-group.dropdown
                button.btn.btn-default.dropdown-toggle(data-toggle='dropdown')
                    | More 
                    i.fa.fa-angle-down
                ul.dropdown-menu
                    li
                        a(href='javascript:;') Dropdown link
                    li
                        a(href='javascript:;') Dropdown link
        br
        .btn-group.m-b-10.btn-rounded
            button.btn.btn-success
                i.fa.fa-star
                |  Stared
            button.btn.btn-danger
                i.fa.fa-user
                |  Users
            button.btn.btn-info
                i.fa.fa-cloud-upload
                |  Upload
        br
        .btn-group.m-b-10
            button.btn.btn-default.labeled
                span.btn-label
                    i.fa.fa-backward
                | Back
            button.btn.btn-default
                i.fa.fa-play.m-r-5
                |  Play
            button.btn.btn-default.labeled.right
                | Forward
                span.btn-label
                    i.fa.fa-forward
        h6.m-t-10.m-b-10 Button toolbar
        .btn-toolbar.m-b-10
