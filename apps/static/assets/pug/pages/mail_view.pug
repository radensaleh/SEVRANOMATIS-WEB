            .mailbox-body
                .d-flex.justify-content-between.m-b-10
                    span.font-strong
                        i.fa.fa-paperclip
                        |  3 attachments
                    button.btn.btn-default.btn-sm(data-action='reply', data-toggle='tooltip', data-original-title='Download all')
                        i.fa.fa-download
                .mail-attachments.d-flex
                    .card
                        div
                            +img('blog/storm.jpg')(class='card-img-top file-image')
                        .card-body
                            span storm.jpg
                            a.btn.btn-default.btn-xs.float-right(href='javascript:;')
                                i.fa.fa-download
                    .card
                        div
                            +img('blog/horse.jpg')(class='card-img-top file-image')
                        .card-body
                            span horse.jpg
                            a.btn.btn-default.btn-xs.float-right(href='javascript:;')
                                i.fa.fa-download
                    .card
                        .text-center
                            +img('file.png')(class='card-img-top file-image', height='160px')
                        .card-body
                            span document.txt
                            a.btn.btn-default.btn-xs.float-right(href='javascript:;')
                                i.fa.fa-download
